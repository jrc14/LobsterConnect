<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LobsterConnect.MainPage">
	<ScrollView Orientation="Vertical" Height="500">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid x:Name="gdSlotLabels" Width="100" Grid.Column="0" BackgroundColor="Red">

			</Grid>
			<ScrollView Grid.Column="1" Height="500" Orientation="Horizontal" >
				<Grid BackgroundColor="Yellow" x:Name="gdSessions">
				</Grid>

			</ScrollView>

		</Grid>
	</ScrollView>

 
</ContentPage>
