<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="LobsterConnect.V.PopupChooseEvent">
    <Grid RowSpacing="0" ColumnSpacing="0" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" x:Name="rdefButtons"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="colDef0" Width="150"/>
            <ColumnDefinition x:Name="colDef1" Width="150"/>
        </Grid.ColumnDefinitions>
        <ImageButton Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="End" Padding="5" WidthRequest="45" HeightRequest="45" BorderColor="Transparent"  BorderWidth="0" BackgroundColor="Transparent" CornerRadius="5"
			         Clicked="btnHelpClicked">
            <ImageButton.Source>
                <FontImageSource Glyph="&#xf638;" FontFamily="FluentSystemIcons-Regular" Color="Black"/>
            </ImageButton.Source>
        </ImageButton>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HeightRequest="50" Text="Gaming Event" FontAttributes="Bold"></Label>
        <Label Grid.Row="1" Grid.Column="0" HeightRequest="50" Text="Choose an event"></Label>
        <Picker Grid.Row="1" Grid.Column="1" HeightRequest="50" x:Name="pickerEvents" ></Picker>
        <Button Grid.Row="2" Grid.Column="0" Text="Cancel" Clicked="OnCancelClicked" Margin="5" x:Name="btnCancel"></Button>
        <Button Grid.Row="2" Grid.Column="1" Text="OK" Clicked="OnOkClicked" Margin="5" x:Name="btnOk" ></Button>
        
    </Grid>
</toolkit:Popup>